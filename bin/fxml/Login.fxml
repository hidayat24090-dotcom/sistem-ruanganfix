                  <Font name="System Bold" size="20.0" />
               </font>
            </Label>
            <Label text="Login Admin">
               <font>
                  <Font size="14.0" />
               </font>
            </Label>
            
            <VBox spacing="10.0">
               <children>
                  <Label text="Username:" />
                  <TextField fx:id="usernameField" onKeyPressed="#handleEnter" promptText="Masukkan username" styleClass="text-field" />
               </children>
            </VBox>
            
            <VBox spacing="10.0">
               <children>
                  <Label text="Password:" />
                  <PasswordField fx:id="passwordField" onKeyPressed="#handleEnter" promptText="Masukkan password" styleClass="text-field" />
               </children>
            </VBox>
            
            <Label fx:id="errorLabel" styleClass="error-label" text="Error message" visible="false" />
            
            <Button fx:id="loginButton" maxWidth="1.7976931348623157E308" onAction="#handleLogin" styleClass="primary-button" text="Login">
