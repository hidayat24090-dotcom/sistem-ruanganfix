<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="1100.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sistemruangan.view.DaftarRuanganController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label styleClass="title-label" text="Daftar Ruangan">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnKembali" mnemonicParsing="false" onAction="#handleKembali" styleClass="secondary-button" text="â† Kembali" />
               </children>
            </HBox>
            
            <Separator />
            
            <HBox spacing="20.0">
               <children>
                  <!-- Form Input -->
                  <VBox spacing="12.0" styleClass="form-box" HBox.hgrow="NEVER">
                     <children>
                        <Label styleClass="section-title" text="Form Ruangan">
                           <font>
                              <Font name="System Bold" size="14.0" />
                           </font>
                        </Label>
                        
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Nama Ruangan:" />
                              <TextField fx:id="txtNama" promptText="Nama ruangan" styleClass="text-field" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Jumlah Kursi:" />
                              <TextField fx:id="txtKursi" promptText="Jumlah kursi" styleClass="text-field" />
                           </children>
                        </VBox>
                        
                        <CheckBox fx:id="cbProyektor" text="Ada Proyektor" />
                        
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Kondisi HDMI:" />
                              <ComboBox fx:id="cbHdmi" maxWidth="1.7976931348623157E308" promptText="Pilih kondisi" styleClass="combo-box" />
                           </children>
                        </VBox>
                        
                        <VBox spacing="5.0">
                           <children>
                              <Label text="Status:" />
                              <ComboBox fx:id="cbStatus" maxWidth="1.7976931348623157E308" promptText="Pilih status" styleClass="combo-box" />
                           </children>
                        </VBox>
                        
                        <Separator />
                        
                        <VBox spacing="8.0">
                           <children>
                              <Button fx:id="btnTambah" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleTambah" styleClass="primary-button" text="âž• Tambah" />
                              <Button fx:id="btnUpdate" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleUpdate" styleClass="success-button" text="âœï¸ Update" />
                              <Button fx:id="btnHapus" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleHapus" styleClass="danger-button" text="ðŸ—‘ï¸ Hapus" />
                              <Button fx:id="btnClear" maxWidth="1.7976931348623157E308" mnemonicParsing="false" onAction="#handleClear" styleClass="secondary-button" text="Clear" />
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
                     </padding>
                  </VBox>
                  
                  <!-- Table View -->
                  <VBox spacing="10.0" HBox.hgrow="ALWAYS">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <TextField fx:id="txtSearch" onKeyReleased="#handleSearch" promptText="ðŸ” Cari ruangan..." styleClass="text-field" HBox.hgrow="ALWAYS" />
                              <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#handleRefresh" styleClass="secondary-button" text="ðŸ”„ Refresh" />
                           </children>
                        </HBox>
                        
                        <TableView fx:id="tableRuangan" styleClass="table-view" VBox.vgrow="ALWAYS">
                           <columns>
                              <TableColumn fx:id="colId" prefWidth="50.0" text="ID" />
                              <TableColumn fx:id="colNama" prefWidth="200.0" text="Nama Ruangan" />
                              <TableColumn fx:id="colKursi" prefWidth="100.0" text="Kursi" />
                              <TableColumn fx:id="colProyektor" prefWidth="120.0" text="Proyektor" />
                              <TableColumn fx:id="colHdmi" prefWidth="120.0" text="HDMI" />
                              <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
                           </columns>
                        </TableView>
                     </children>
                  </VBox>
               </children>
            </HBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>