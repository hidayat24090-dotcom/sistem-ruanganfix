<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane prefHeight="700.0" prefWidth="1000.0" styleClass="root-pane" xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sistemruangan.view.UserRuanganListController">
   <children>
      <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="20.0">
         <children>
            <!-- Header -->
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Label styleClass="title-label" text="ðŸ“‹ Daftar Ruangan Tersedia">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </Label>
                  <Region HBox.hgrow="ALWAYS" />
                  <Button fx:id="btnKembali" mnemonicParsing="false" onAction="#handleKembali" styleClass="secondary-button" text="â† Kembali" />
               </children>
            </HBox>
            
            <Separator />
            
            <!-- Filter dan Search -->
            <HBox alignment="CENTER_LEFT" spacing="15.0" styleClass="form-box">
               <children>
                  <Label text="Filter Status:">
                     <font>
                        <Font name="System Bold" size="13.0" />
                     </font>
                  </Label>
                  
                  <ComboBox fx:id="cbFilterStatus" onAction="#handleFilter" prefWidth="150.0" promptText="Semua" styleClass="combo-box" />
                  
                  <Region HBox.hgrow="ALWAYS" />
                  
                  <TextField fx:id="txtSearch" onKeyReleased="#handleSearch" prefWidth="300.0" promptText="ðŸ” Cari ruangan..." styleClass="text-field" />
                  
                  <Button fx:id="btnRefresh" mnemonicParsing="false" onAction="#handleRefresh" styleClass="secondary-button" text="ðŸ”„ Refresh" />
               </children>
               <padding>
                  <Insets bottom="15.0" left="15.0" right="15.0" top="15.0" />
               </padding>
            </HBox>
            
            <!-- Table -->
            <VBox spacing="10.0" VBox.vgrow="ALWAYS">
               <children>
                  <TableView fx:id="tableRuangan" styleClass="table-view" VBox.vgrow="ALWAYS">
                     <columns>
                        <TableColumn fx:id="colNama" prefWidth="220.0" text="Nama Ruangan" />
                        <TableColumn fx:id="colKursi" prefWidth="100.0" text="Kapasitas" />
                        <TableColumn fx:id="colProyektor" prefWidth="120.0" text="Proyektor" />
                        <TableColumn fx:id="colHdmi" prefWidth="120.0" text="HDMI" />
                        <TableColumn fx:id="colStatus" prefWidth="120.0" text="Status" />
                        <TableColumn fx:id="colAksi" prefWidth="180.0" text="Aksi" />
                     </columns>
                  </TableView>
                  
                  <!-- Info Summary -->
                  <HBox alignment="CENTER_LEFT" spacing="30.0" styleClass="form-box">
                     <children>
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Label text="Total Ruangan">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblTotalRuangan" styleClass="title-label" text="0">
                                 <font>
                                    <Font name="System Bold" size="20.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        
                        <Separator orientation="VERTICAL" />
                        
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Label text="Tersedia">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblTersedia" styleClass="status-tersedia" text="0">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        
                        <VBox alignment="CENTER" spacing="5.0">
                           <children>
                              <Label text="Dipinjam">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                              <Label fx:id="lblDipinjam" styleClass="status-dipinjam" text="0">
                                 <font>
                                    <Font name="System Bold" size="18.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                        
                        <Region HBox.hgrow="ALWAYS" />
                        
                        <VBox alignment="CENTER_RIGHT">
                           <children>
                              <Label text="âœ¨ Klik tombol 'Pinjam' untuk mengajukan peminjaman">
                                 <font>
                                    <Font size="11.0" />
                                 </font>
                              </Label>
                           </children>
                        </VBox>
                     </children>
                     <padding>
                        <Insets bottom="15.0" left="20.0" right="20.0" top="15.0" />
                     </padding>
                  </HBox>
               </children>
            </VBox>
         </children>
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </padding>
      </VBox>
   </children>
</AnchorPane>