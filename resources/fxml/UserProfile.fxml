                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="No. Telepon:">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                    </Label>
                                    <TextField fx:id="txtTelepon" disable="true" styleClass="text-field" />
