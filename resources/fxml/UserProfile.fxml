                                    <PasswordField fx:id="txtOldPassword" promptText="Masukkan password lama" styleClass="text-field" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0">
                                 <children>
                                    <Label text="Password Baru:">
                                       <font>
                                          <Font name="System Bold" size="13.0" />
                                       </font>
                                    </Label>
                                    <PasswordField fx:id="txtNewPassword" promptText="Masukkan password baru" styleClass="text-field" />
                                 </children>
                              </VBox>
                              
                              <VBox spacing="8.0">
