            </HBox>
            
            <Separator />
            
            <ScrollPane fitToWidth="true" style="-fx-background-color: transparent;" VBox.vgrow="ALWAYS">
               <content>
                  <VBox spacing="20.0">
                     <children>
                        <!-- Profile Info -->
                        <VBox spacing="15.0" styleClass="form-box">
                           <children>
                              <HBox alignment="CENTER_LEFT" spacing="10.0">
                                 <children>
                                    <Label styleClass="section-title" text="Informasi Profile">
                                       <font>
                                          <Font name="System Bold" size="16.0" />
                                       </font>
                                    </Label>
                                    <Region HBox.hgrow="ALWAYS" />
                                    <Button fx:id="btnEdit" mnemonicParsing="false" onAction="#handleEdit" styleClass="primary-button" text="âœï¸ Edit Profile" />
